@model Proyecto.Domain.Entities.Pelicula
@{
    ViewData["Title"] = "Editar Película";
}

<div class="container my-5">
    <!-- Título -->
    <h1 class="text-center fw-semibold text-white" 
        style="font-family: 'Poppins', sans-serif; 
               font-size: 48px; 
               font-style: normal; 
               line-height: 58px; 
               margin-bottom: 30px;">
        Editar Película
    </h1>

    <!-- Formulario -->
    <form method="post" asp-controller="Peliculas" asp-action="Editar" 
          class="mx-auto" 
          style="width: 500px; 
                 padding: 20px; 
                 border-radius: 16px; 
                 background: #FFF; 
                 box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.15);">
        <input type="hidden" name="PeliculaId" value="@Model.PeliculaId" />

        <!-- Campo Título -->
        <div class="mb-3">
            <label for="Titulo" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Título
            </label>
            <input type="text" id="Titulo" name="Titulo" 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;" 
                   value="@Model.Titulo" required />
        </div>

        <!-- Campo Género -->
        <div class="mb-3">
            <label for="Genero" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Género
            </label>
            <input type="text" id="Genero" name="Genero" 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;" 
                   value="@Model.Genero" required />
        </div>

        <!-- Campo Duración -->
        <div class="mb-3">
            <label for="Duracion" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Duración
            </label>
            <input type="text" id="Duracion" name="Duracion" 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;" 
                   value="@Model.Duracion" required />
        </div>

        <!-- Campo Descripción -->
        <div class="mb-3">
            <label for="Descripcion" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Descripción
            </label>
            <textarea id="Descripcion" name="Descripcion" 
                      class="form-control" 
                      style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;" 
                      required>@Model.Descripcion</textarea>
        </div>

        <!-- Campo Fecha de Estreno -->
        <div class="mb-3">
            <label for="FechaEstreno" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Fecha de Estreno
            </label>
            <input type="date" id="FechaEstreno" name="FechaEstreno" 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;" 
                   value="@Model.FechaEstreno" required />
        </div>

        <!-- Botón Guardar -->
        <div class="text-center">
            <button type="submit" 
                    class="btn text-white" 
                    style="width: 100%; 
                           padding: 12px 20px; 
                           font-family: 'Poppins', sans-serif; 
                           font-weight: bold; 
                           border-radius: 80px; 
                           background: #FF1D45; 
                           box-shadow: 0px 0px 11px 0px #FF1D45; 
                           border: none; 
                           color: white; 
                           transition: all 0.3s ease;"
                    onmouseover="this.style.background='#FF4A68'; this.style.boxShadow='0px 0px 15px 2px #FF4A68';"
                    onmouseout="this.style.background='#FF1D45'; this.style.boxShadow='0px 0px 11px 0px #FF1D45';">
                Guardar Cambios
            </button>
        </div>
    </form>
</div>
