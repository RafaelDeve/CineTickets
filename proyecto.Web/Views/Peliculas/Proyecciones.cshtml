@model IEnumerable<Proyecto.Domain.Entities.Proyeccion>
@{
    ViewData["Title"] = "Proyecciones Disponibles";
}

<div class="container my-5">
    <!-- Título -->
    <h1 class="text-center fw-semibold text-white" 
        style="font-family: 'Poppins', sans-serif; 
               font-size: 48px; 
               font-style: normal; 
               line-height: 58px; 
               max-width: 823px; 
               margin-bottom: 30px;">
        Proyecciones Disponibles
    </h1>

    @if (Model == null || !Model.Any())
    {
        <!-- Mensaje de Sin Proyecciones -->
        <p class="text-center text-white" 
           style="font-family: 'Poppins', sans-serif; 
                  font-size: 20px;">
            No hay proyecciones disponibles en este momento.
        </p>
    }
    else
    {
        <!-- Lista de Proyecciones -->
        <div class="row gx-4 gy-4 justify-content-center">
            @foreach (var proyeccion in Model)
            {
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="card d-flex justify-content-center align-items-center position-relative" 
                        style="width: 300px; 
                               min-height: 150px; 
                               border-radius: 48px; 
                               background: #FFF; 
                               box-shadow: 0px 0px 63px 0px rgba(0, 0, 0, 0.30); 
                               padding: 20px;">
                        
                        <!-- Detalle de Proyección -->
                        <div class="text-center">
                            <p style="font-family: 'Poppins', sans-serif; 
                                      font-size: 18px; 
                                      font-weight: 600; 
                                      color: #1E1F22; 
                                      margin-bottom: 10px;">
                                Fecha y Hora: 
                                <span style="font-weight: 400;">@proyeccion.FechaHora</span>
                            </p>
                            <p style="font-family: 'Poppins', sans-serif; 
                                      font-size: 18px; 
                                      font-weight: 600; 
                                      color: #1E1F22;">
                                Sala: <span style="font-weight: 400;">@proyeccion.Sala</span>
                            </p>
                        </div>

                        <!-- Botón Comprar Entradas -->
                        <a href="/Entradas/Comprar?proyeccionId=@proyeccion.ProyeccionId" 
                           class="btn text-white d-flex align-items-center justify-content-center mt-3 w-100" 
                           style="width: 250px; 
                                  padding: 10px 15px; 
                                  font-family: 'Poppins', sans-serif; 
                                  font-weight: bold; 
                                  border-radius: 80px; 
                                  background: #FF1D45; 
                                  box-shadow: 0px 0px 11px 0px #FF1D45; 
                                  border: none; 
                                  color: white; 
                                  transition: all 0.3s ease;"
                           onmouseover="this.style.background='#FF4A68'; this.style.boxShadow='0px 0px 15px 2px #FF4A68';"
                           onmouseout="this.style.background='#FF1D45'; this.style.boxShadow='0px 0px 11px 0px #FF1D45';">
                            Comprar Entradas
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>