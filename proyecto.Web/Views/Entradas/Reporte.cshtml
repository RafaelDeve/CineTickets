@model IEnumerable<Proyecto.Domain.Entities.Entrada>
@{
    ViewData["Title"] = "Reporte de Entradas";
}

<div class="container my-5">
    <!-- Título del Reporte -->
    <h1 class="text-center fw-semibold text-white" 
        style="font-family: 'Poppins', sans-serif; 
               font-size: 48px; 
               font-style: normal; 
               line-height: 58px; 
               margin-bottom: 30px;">
        Reporte de Entradas
    </h1>

    <!-- Tabla de Entradas -->
    <div class="table-responsive" style="box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.15); border-radius: 16px; overflow: hidden;">
        <table class="table text-center" 
               style="margin: 0; 
                      border-collapse: separate; 
                      width: 100%; 
                      background: #FFF;">
            <thead style="background: #FF1D45; color: white; font-family: 'Poppins', sans-serif; font-size: 18px;">
                <tr>
                    <th style="padding: 15px;">Película</th>
                    <th style="padding: 15px;">Fecha y Hora de Proyección</th>
                    <th style="padding: 15px;">Número de Asiento</th>
                    <th style="padding: 15px;">Precio</th>
                </tr>
            </thead>
            <tbody style="font-family: 'Poppins', sans-serif; font-size: 16px; color: #1E1F22;">
                @foreach (var entrada in Model)
                {
                    <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.1);">
                        <td style="padding: 15px;">@entrada.Proyeccion.Pelicula.Titulo</td>
                        <td style="padding: 15px;">@entrada.Proyeccion.FechaHora</td>
                        <td style="padding: 15px;">@entrada.NumeroAsiento</td>
                        <td style="padding: 15px;">@entrada.Precio</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Total Recaudado -->
    <div class="d-flex flex-column align-items-center justify-content-center text-center mt-5">
        <h3 class="text-white fw-semibold" 
            style="font-family: 'Poppins', sans-serif; 
                   font-size: 28px; 
                   line-height: 36px;">
            Total Recaudado: <span style="color: #FF1D45;">@Model.Sum(e => e.Precio)</span>
        </h3>

        <a href="/" 
           class="btn text-white d-flex align-items-center justify-content-center mt-4" 
           style="width: 250px; 
                  padding: 12px 20px; 
                  font-family: 'Poppins', sans-serif; 
                  font-weight: bold; 
                  border-radius: 80px; 
                  background: #FF1D45; 
                  box-shadow: 0px 0px 11px 0px #FF1D45; 
                  border: none; 
                  color: white; 
                  transition: all 0.3s ease;"
           onmouseover="this.style.background='#FF4A68'; this.style.boxShadow='0px 0px 15px 2px #FF4A68';"
           onmouseout="this.style.background='#FF1D45'; this.style.boxShadow='0px 0px 11px 0px #FF1D45';">
            Volver al Inicio
        </a>
    </div>
</div>
