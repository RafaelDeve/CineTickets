@model Proyecto.Domain.Entities.Proyeccion
@{
    ViewData["Title"] = "Comprar Entrada";
}

<div class="container my-5">
    <!-- Título -->
    <h1 class="text-center fw-semibold text-white" 
        style="font-family: 'Poppins', sans-serif; 
               font-size: 48px; 
               font-style: normal; 
               line-height: 58px; 
               max-width: 823px; 
               margin-bottom: 30px;">
        Comprar Entrada para @Model.Pelicula?.Titulo
    </h1>

    <!-- Detalles de la Proyección -->
    <div class="card d-flex flex-column align-items-center position-relative mx-auto" 
         style="width: 500px; 
                padding: 20px; 
                border-radius: 48px; 
                background: #FFF; 
                box-shadow: 0px 0px 63px 0px rgba(0, 0, 0, 0.30);">
        <p class="text-center" 
           style="font-family: 'Poppins', sans-serif; 
                  font-size: 18px; 
                  color: #1E1F22; 
                  margin-bottom: 10px;">
            Fecha y Hora: 
            <span style="font-weight: 600;">@Model.FechaHora</span>
        </p>
        <p class="text-center" 
           style="font-family: 'Poppins', sans-serif; 
                  font-size: 18px; 
                  color: #1E1F22;">
            Sala: 
            <span style="font-weight: 600;">@Model.Sala</span>
        </p>
    </div>

    <!-- Formulario -->
    <form method="post" action="/Entradas/ConfirmarCompra" 
          class="d-flex flex-column mx-auto mt-4" 
          style="width: 500px; padding: 20px; 
                 border-radius: 48px; 
                 background: #FFF; 
                 box-shadow: 0px 0px 63px 0px rgba(0, 0, 0, 0.30);">
        <input type="hidden" name="proyeccionId" value="@Model.ProyeccionId" />

        <!-- ID de Usuario -->
        <div class="mb-3">
            <label for="usuarioId" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                ID de Usuario:
            </label>
            <input type="number" id="usuarioId" name="usuarioId" required 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;"/>
        </div>

        <!-- Número de Asiento -->
        <div class="mb-3">
            <label for="numeroAsiento" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Número de Asiento:
            </label>
            <input type="number" id="numeroAsiento" name="numeroAsiento" required 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;"/>
        </div>

        <!-- Precio -->
        <div class="mb-4">
            <label for="precio" 
                   style="font-family: 'Poppins', sans-serif; 
                          font-size: 16px; 
                          color: #1E1F22;">
                Precio:
            </label>
            <input type="number" id="precio" name="precio" required 
                   class="form-control" 
                   style="border-radius: 10px; font-family: 'Poppins', sans-serif; font-size: 16px;"/>
        </div>

        <!-- Botón Confirmar Compra -->
        <button type="submit" 
                class="btn text-white d-flex align-items-center justify-content-center" 
                style="width: 100%; 
                       padding: 12px 20px; 
                       font-family: 'Poppins', sans-serif; 
                       font-weight: bold; 
                       border-radius: 80px; 
                       background: #FF1D45; 
                       box-shadow: 0px 0px 11px 0px #FF1D45; 
                       border: none; 
                       color: white; 
                       transition: all 0.3s ease;"
                onmouseover="this.style.background='#FF4A68'; this.style.boxShadow='0px 0px 15px 2px #FF4A68';"
                onmouseout="this.style.background='#FF1D45'; this.style.boxShadow='0px 0px 11px 0px #FF1D45';">
            Confirmar Compra
        </button>
    </form>
</div>
