@{
    ViewData["Title"] = "Confirmación de Compra";
}

<div class="container my-5">
    <!-- Título de Confirmación -->
    <h1 class="text-center fw-semibold text-white" 
        style="font-family: 'Poppins', sans-serif; 
               font-size: 48px; 
               font-style: normal; 
               line-height: 58px; 
               max-width: 823px; 
               margin-bottom: 30px;">
        ¡Compra Exitosa!
    </h1>

    <!-- Mensaje de Confirmación -->
    <div class="card mx-auto text-center d-flex justify-content-center align-items-center position-relative" 
         style="width: 500px; 
                padding: 30px; 
                border-radius: 48px; 
                background: #FFF; 
                box-shadow: 0px 0px 63px 0px rgba(0, 0, 0, 0.30);">
        <p style="font-family: 'Poppins', sans-serif; 
                  font-size: 18px; 
                  font-weight: 500; 
                  color: #1E1F22;">
            Gracias por comprar tu entrada. Disfruta la película.
        </p>
        <a href="/" 
           class="btn text-white d-flex align-items-center justify-content-center mt-4" 
           style="width: 250px; 
                  padding: 12px 20px; 
                  font-family: 'Poppins', sans-serif; 
                  font-weight: bold; 
                  border-radius: 80px; 
                  background: #FF1D45; 
                  box-shadow: 0px 0px 11px 0px #FF1D45; 
                  border: none; 
                  color: white; 
                  transition: all 0.3s ease;"
           onmouseover="this.style.background='#FF4A68'; this.style.boxShadow='0px 0px 15px 2px #FF4A68';"
           onmouseout="this.style.background='#FF1D45'; this.style.boxShadow='0px 0px 11px 0px #FF1D45';">
            Volver al Inicio
        </a>
    </div>
</div>
